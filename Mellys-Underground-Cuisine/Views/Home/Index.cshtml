@{
    ViewData["Title"] = "Melly's Underground Cuisine";
}
<!-- Carousel wrapper -->
<div class="theContainer">
    <div id="mellysCarousel" class="carousel slide carousel-fade w-100 " data-bs-ride="carousel">
        <!-- Indicators -->
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#mellysCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            @for (var x = 1; x <= 31; x++)
            {
                var y = x + 1;
                <button type="button" data-bs-target="#mellysCarousel" data-bs-slide-to="@x" aria-label="Slide @y"></button>
            }
        </div>

        <!-- Inner -->
        <div class="carousel-inner rounded-5 shadow-4-strong">
            <!-- Single item -->

            <div class="carousel-item active">
                <img src="./images/single (1).jpg" 
                     alt="Sunset Over the City" />
                <div class="carousel-caption d-none d-md-block">
                    <h5>Slide 1</h5>
                    <p>Some of the great food Mrs. Toledo Makes :) </p>
                </div>
            </div>
            @for (var i = 2; i <= 32; i++)
            {
                string imgStarter = "./images/single (" + i + ").jpg";

                <div class="carousel-item">

                    <img src="@imgStarter" 
                     alt=i />
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Slide @i </h5>
                        <p>Some of the great food Mrs. Toledo Makes :) </p>
                    </div>
                </div>
            }
        </div>
        <!-- Inner -->
        <!-- Controls -->
        <button class="carousel-control-prev " type="button" data-bs-target="#mellysCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon " aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#mellysCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-- Carousel wrapper -->
    <div class="loginRegister">
        <p>
            If you would like to order some food please <a asp-action="Login" asp-controller="Accounts">login</a>
            and see what is available today. If you don't have and account <a asp-action="Register" asp-controller="Accounts">register</a> .
        </p>
    </div>
</div>
