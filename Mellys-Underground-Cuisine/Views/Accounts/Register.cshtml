@using Mellys_Underground_Cuisine.Models.ViewModels
@model AppUserVM

<section class="vh-100">
    
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
           <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Create an account</h2>
                            
                            <form asp-action="Register" asp-controller="Accounts" method="post">
                                <div class="val" asp-validation-summary="All"></div>
                                <div class="form-outline mb-4">
                                    <input asp-for="UserName" class="form-control form-control-lg" />
                                    <label class="form-label" asp-for="UserName">User Name</label>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for="Email" class="form-control form-control-lg" />
                                    <label asp-for="Email" class="form-label">Your Email</label>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for="Password" class="form-control form-control-lg" />
                                    <label asp-for="Password" class="form-label">Password</label>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for="ConfirmPassword" class="form-control form-control-lg" />
                                    <label asp-for="ConfirmPassword" class="form-label">Repeat your password</label>
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button type="submit"
                                            class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">
                                        Register
                                    </button>
                                </div>

                                <p class="text-center text-muted mt-5 mb-0">
                                    Already have an account? Then
                                    <a asp-action="Login" class="fw-bold text-body"><u>Login here</u></a>
                                </p>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Styles {
<link href="/css/Register.css" rel="stylesheet" type="text/css" />
}

@section Scripts {
  @{
      await Html.RenderPartialAsync("_ValidationScriptsPartial");
   }
 }